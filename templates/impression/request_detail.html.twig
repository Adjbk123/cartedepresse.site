{% extends 'baseAccueil.html.twig' %}

{% block title %}Détails de la Carte{% endblock %}
{% block breadcrumb %}Vérification de carte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            -webkit-user-select: none; /* Safari */
            -moz-user-select: none; /* Firefox */
            -ms-user-select: none; /* Internet Explorer/Edge */
            user-select: none; /* Non-prefixed version, currently supported by Chrome, Opera and Firefox */
        }
        .card-custom {
            border: 1px solid #ddd;
            border-radius: 0.375rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 1rem;
            background-color: #f8f9fa;
        }
        .card-header-custom {
            background-color: #007bff;
            color: white;
            padding: 0.75rem 1.25rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            border-radius: 0.375rem 0.375rem 0 0;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if carte %}
            <div class="card card-custom">
                <div class="card-header card-header-custom">
                    Détails pour la carte <strong>{{ carte.numDemande }} </strong> delivrée le <strong>{{ carte.dateExpiration|date('d/m/Y') }}</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">

                            <img width="100%" src="{{ absolute_url(asset('uploads/') )}}{{ carte.professionnel.photo }}" alt="">

                        </div>
                        <div class="col-md-8 fs-4 mt-4">
                            <p class="card-text"><strong>Nom :</strong> {{ carte.professionnel.nom }}</p>
                            <p class="card-text"><strong>Prénoms :</strong> {{ carte.professionnel.prenoms }}</p>
                            <p class="card-text"><strong>Profession :</strong> {{ carte.historiqueOrganeActuel.profession.libelle }}</p>
                            <p class="card-text"><strong>Organe :</strong> {{ carte.historiqueOrganeActuel.organe.designation }}</p>
                            <p class="card-text"><strong>Date d'Expiration :</strong> {{ carte.dateExpiration|date('d/m/Y')}}</p>
                            <p class="card-text"><strong>Statut : </strong>
                                {% if carte.dateExpiration < date() %}
                                    <span class="badge bg-danger">Expirée</span>
                                {% else %}
                                    <span class="badge bg-primary">Valable</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>


                    <!-- Ajoutez d'autres champs nécessaires ici -->
                </div>
                <div class="card-footer text-muted">
                    <!-- Vous pouvez ajouter des informations supplémentaires ici si nécessaire -->
                </div>
            </div>
        {% else %}
            <div class="alert alert-danger mt-4">
                <p>La carte avec le numéro {{ numDemande }} est introuvable.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.body.oncopy = function() {
                return false;
            };
        });
    </script>
{% endblock %}
