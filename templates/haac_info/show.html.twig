{% extends 'base.html.twig' %}

{% block title %}HaacInfo{% endblock %}
{% block bouton %}
    <a href="{{ path('app_haac_info_index') }}" class="btn btn-secondary">← Retour à la liste</a>


{% endblock %}
{% block body %}


    <table class="table table-striped table-bordered align-middle">
        <tbody>
        <tr>
            <th>Logo</th>
            <td>
                {% if haac_info.logoPath %}
                    <img src="{{ asset(haac_info.logoPath) }}" alt="Logo" width="100">
                {% else %}
                    <span class="text-muted">Non défini</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Armoirie</th>
            <td>
                {% if haac_info.amoiriePath %}
                    <img src="{{ asset(haac_info.amoiriePath) }}" alt="Armoirie" width="100">
                {% else %}
                    <span class="text-muted">Non définie</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Cachet</th>
            <td>
                {% if haac_info.cachetPath %}
                    <img src="{{ asset(haac_info.cachetPath) }}" alt="Cachet" width="100">
                {% else %}
                    <span class="text-muted">Non défini</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Texte introductif</th>
            <td>{{ haac_info.textIntro|nl2br }}</td>
        </tr>
        <tr>
            <th>Mention finale</th>
            <td>{{ haac_info.mentionFinale|nl2br }}</td>
        </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_haac_info_edit', {'id': haac_info.id}) }}" class="btn btn-primary">Modifier</a>
    </div>
{% endblock %}
