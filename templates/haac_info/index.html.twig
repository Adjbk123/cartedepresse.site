{% extends 'base.html.twig' %}

{% block title %}Informations HAAC{% endblock %}

{% block body %}
    <table class="table table-bordered align-middle">
        <thead class="table-secondary">
        <tr>

            <th>Logo</th>
            <th>Armoirie</th>
            <th>Cachet</th>


            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for haac_info in haac_infos %}
            <tr>

                <td>
                    {% if haac_info.logoPath %}
                        <img src="{{ asset(haac_info.logoPath) }}" alt="Logo" width="60">
                    {% else %}
                        <span class="text-muted">Aucun</span>
                    {% endif %}
                </td>
                <td>
                    {% if haac_info.amoiriePath %}
                        <img src="{{ asset(haac_info.amoiriePath) }}" alt="Armoirie" width="60">
                    {% else %}
                        <span class="text-muted">Aucune</span>
                    {% endif %}
                </td>
                <td>
                    {% if haac_info.cachetPath %}
                        <img src="{{ asset(haac_info.cachetPath) }}" alt="Cachet" width="60">
                    {% else %}
                        <span class="text-muted">Aucun</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_haac_info_show', {'id': haac_info.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_haac_info_edit', {'id': haac_info.id}) }}" class="btn btn-success btn-sm">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center text-muted">Aucune information enregistrée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
