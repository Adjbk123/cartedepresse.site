{% extends 'base.html.twig' %}

{% block title %}Liste des types de pièces à fournir{% endblock %}
{% block  bouton  %}

    <a class="btn btn-outline-secondary" href="{{ path('app_type_piece_index') }}">Nouvel ajout</a>

{% endblock %}


{% block body %}
<div class="">
    <table class="table datatable-init table-hover table-bordered">
        <thead class="table-light">
        <tr>
            <th>N°</th>
            <th>Libellé</th>
            <th>Type Demande</th>

            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for type_piece in type_pieces %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ type_piece.libelle }}</td>
                <td>{{ type_piece.typeDemande }}</td>
                <td>
                    <div class="dropdown mt-4 mt-sm-0">
                        <a href="#" class="btn btn-outline-light btn-sm dropdown-toggle border " data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="icon ni ni-opt-dot-alt"></i>
                        </a>
                        <div class="dropdown-menu" style="">
                            <a class="dropdown-item link-info" href="{{ path('app_type_piece_show', {'id': type_piece.id}) }}">Voir</a>
                            <a class="dropdown-item link-success" href="{{ path('app_type_piece_edit', {'id': type_piece.id}) }}">Editer</a>
                            {{ include('type_piece/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
