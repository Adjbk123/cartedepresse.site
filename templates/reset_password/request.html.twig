{% extends 'baseAccueil2.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <!-- Hero Start -->
    <section class="bg-half-100 bg-light d-table w-100">
        <div class="container">
            <div class="row mt-5 justify-content-center">
                <div class="col-lg-12 text-center">
                    <div class="pages-heading">
                        <h4 class="title mb-0">Réinitialisation du mot de passe</h4>
                    </div>
                </div>
            </div>

            <div class="position-breadcrumb">
                <nav aria-label="breadcrumb" class="d-inline-block">
                    <ul class="breadcrumb rounded shadow mb-0 px-4 py-2">
                        <li class="breadcrumb-item"><a href="{{ path('app_accueil') }}">Accueil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Réinitialiser le mot de passe</li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
    <!-- Hero End -->

    <section class="section bg-light py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">
                            {{ flash_error }}
                        </div>
                    {% endfor %}

                    <div class="card border-0 shadow">
                        <div class="card-body p-4">


                            {{ form_start(requestForm) }}
                            <div class="mb-3">
                                {{ form_label(requestForm.email, 'Adresse email') }}
                                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <p class="small text-muted">
                                Entrez votre adresse e-mail. Un lien de réinitialisation vous sera envoyé si un compte est associé.
                            </p>

                   <div class="text-center">
                       <button class="btn btn-primary mt-3">Envoyer le lien de réinitialisation</button>

                   </div>
                            {{ form_end(requestForm) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
