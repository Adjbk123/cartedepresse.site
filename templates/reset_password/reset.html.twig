{% extends 'baseAccueil2.html.twig' %}

{% block title %}Définir un nouveau mot de passe{% endblock %}

{% block body %}
    <!-- Hero Start -->
    <section class="bg-half-100 bg-light d-table w-100">
        <div class="container">
            <div class="row mt-5 justify-content-center">
                <div class="col-lg-12 text-center">
                    <div class="pages-heading">
                        <h4 class="title mb-0">Définir un nouveau mot de passe</h4>
                    </div>
                </div>
            </div>

            <div class="position-breadcrumb">
                <nav aria-label="breadcrumb" class="d-inline-block">
                    <ul class="breadcrumb rounded shadow mb-0 px-4 py-2">
                        <li class="breadcrumb-item"><a href="{{ path('app_accueil') }}">Accueil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Nouveau mot de passe</li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
    <!-- Hero End -->

    <section class="section bg-light py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card border-0 shadow">
                        <div class="card-body p-4">
                            <p class="mb-4">Veuillez saisir un nouveau mot de passe pour sécuriser votre compte.</p>

                            {{ form_start(resetForm) }}
                            <div class="mb-3">
                                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe') }}
                                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <button type="submit" class="btn btn-primary mt-3">Réinitialiser le mot de passe</button>
                            {{ form_end(resetForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
