{% extends 'baseAccueil2.html.twig' %}
{% block title %}
Accueil
{% endblock %}



{% block body %}
    <header class="bg-primary text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="display-4">Gérez vos cartes de presse en toute simplicité</h1>
                    <p class="lead">Une solution moderne pour les professionnels des médias</p>
                    <a href="{{ path('app_demande_new') }}" class="btn btn-light btn-lg">Demander une carte de presse</a>
                </div>
                <div class="col-md-6">
                    <img src="{{ asset('images/icons/code-scan.svg') }}" alt="Carte de presse" class="img-fluid">
                </div>
            </div>
        </div>
    </header>

    <section class="py-5">
        <div class="container text-center">
            <h2 class="mb-4">Pourquoi choisir notre solution ?</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <i class="bi bi-speedometer2 display-4 text-primary"></i>
                            <h5 class="card-title mt-3">Rapidité</h5>
                            <p class="card-text">Demande de carte en ligne rapide et efficace.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <i class="bi bi-shield-check display-4 text-primary"></i>
                            <h5 class="card-title mt-3">Sécurité</h5>
                            <p class="card-text">Protection de vos données et suivi sécurisé.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <i class="bi bi-bell display-4 text-primary"></i>
                            <h5 class="card-title mt-3">Notifications</h5>
                            <p class="card-text">Recevez des alertes pour suivre votre demande.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

