<body>

<!-- Loader -->
<div id="preloader">
    <div id="status">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>
</div>

<!-- Back Button -->
<div class="back-to-home">
    <a href="#" class="back-button btn btn-icon btn-primary"><i data-feather="arrow-left" class="icons"></i></a>
</div>

<!-- Main Section -->
<section class="bg-home d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">

            <!-- Left Block -->
            <div class="col-lg-6 mb-4">
                <div class="me-lg-5 text-center text-md-start">
                    <p class="mb-4 fw-bold text-dark fs-5">
                        Vous êtes un professionnel ?<br>
                    <div class="alert alert-light alert-pills text-dark" role="alert">
                        <span class="badge rounded-pill bg-primary me-1">HAAC</span>
                        <span class="content">  Créez votre compte dès maintenant si vous n'en avez pas encore !</span>
                    </div>


                    </p>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-sm mb-4">Créer un compte</a>
                    <img src="{{ absolute_url(asset('assets-landing/images/user/login.png')) }}" alt="Connexion" class="img-fluid mx-auto d-block" style="width: 80%;">
                </div>
            </div>

            <!-- Login Form -->
            <div class="col-lg-6">
                <div class="card login-page shadow rounded border-0">
                    <div class="card-body">

                        <!-- Logo -->
                        <div class="text-center mb-4">
                            <a href="{{ path('app_accueil') }}">
                                <img src="{{ asset('assets/images/logo-haac.png') }}" alt="Logo HAAC" style="width: 100px;">
                            </a>
                            <h4 class="card-title mt-3">Connexion</h4>
                            <p class="fw-bold">Entrez vos informations pour accéder à votre espace</p>
                        </div>

                        <!-- Form -->
                        <form method="post" class="login-form mt-4">

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="mb-3">
                                <label for="username" class="form-label">Adresse email <span class="text-danger">*</span></label>
                                <div class="form-icon position-relative">
                                    <i data-feather="user" class="fea icon-sm icons"></i>
                                    <input type="text" name="_username" id="username" value="{{ last_username }}"
                                           placeholder="Adresse email" class="form-control ps-5" required autofocus>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Mot de passe <span class="text-danger">*</span></label>
                                <div class="form-icon position-relative">
                                    <i data-feather="key" class="fea icon-sm icons"></i>
                                    <input type="password" name="_password" id="password" placeholder="Mot de passe"
                                           class="form-control ps-5" required>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me" checked>
                                    <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
                                </div>
                                <a href="#" class="text-primary fw-bold">Mot de passe oublié ?</a>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Connexion</button>
                            </div>

                            <div class="text-center mt-3">
                                <small class="text-dark me-2">Pas encore de compte ?</small>
                                <a href="{{ path('app_register') }}" class="text-primary fw-bold">S'inscrire</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

