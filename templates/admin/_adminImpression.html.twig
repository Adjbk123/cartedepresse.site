
<div class="row">
    <!-- Card for Impressions for Current Year -->
    <div class="col-sm-6">
        <div class="card card-bordered">
            <div class="card-inner">
                <div class="card-title-group align-start mb-2">
                    <div class="card-title">
                        <h6 class="title">Impressions pour l'année {{ "now"|date("Y") }}</h6>
                    </div>
                    <div class="card-tools">
                        <em class="card-hint icon ni ni-help-fill" data-bs-toggle="tooltip" data-bs-placement="left" aria-label="Nombre total d'impressions pour l'année actuelle"></em>
                    </div>
                </div>
                <div class="align-end flex-sm-wrap g-4 flex-md-nowrap">
                    <div class="nk-sale-data">
                        <span class="amount">{{ totalImpressionsCurrentYear }}</span>
                    </div>
                </div>
            </div>
        </div><!-- .card -->
    </div>

    <!-- Card for Total Impressions -->
    <div class="col-sm-6">
        <div class="card card-bordered">
            <div class="card-inner">
                <div class="card-title-group align-start mb-2">
                    <div class="card-title">
                        <h6 class="title">Impressions Totales</h6>
                    </div>
                    <div class="card-tools">
                        <em class="card-hint icon ni ni-help-fill" data-bs-toggle="tooltip" data-bs-placement="left" aria-label="Nombre total d'impressions"></em>
                    </div>
                </div>
                <div class="align-end flex-sm-wrap g-4 flex-md-nowrap">
                    <div class="nk-sale-data">
                        <span class="amount">{{ totalImpressions }}</span>
                    </div>
                </div>
            </div>
        </div><!-- .card -->
    </div>
</div>

<div class="card mt-4">
    <div class="card-title">
        Statistiques sur le Nombre d'Impressions par Mois
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="year-select">Sélectionner une année :</label>
            <select id="year-select" class="form-control">
                {% for year in years %}
                    <option value="{{ year }}" {% if year == "now"|date("Y") %}selected{% endif %}>{{ year }}</option>
                {% endfor %}
            </select>
        </div>
        <div id="impressions-by-month-chart" style="height: 350px;"></div>
    </div>
</div>


{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yearSelect = document.getElementById('year-select');
            const chartElement = document.getElementById('impressions-by-month-chart');
            let chart;

            function fetchMonthData(year) {
                fetch(`/admin/statistics/impressions/${year}`)
                    .then(response => response.json())
                    .then(data => {
                        const labels = data.map(item => new Date(year, item.month - 1).toLocaleString('default', { month: 'long' }));
                        const counts = data.map(item => item.count);

                        if (chart) {
                            chart.destroy();
                        }

                        chart = new ApexCharts(chartElement, {
                            chart: {
                                type: 'bar',
                                height: 350
                            },
                            series: [{
                                name: `Nombre d'impressions en ${year}`,
                                data: counts
                            }],
                            xaxis: {
                                categories: labels
                            },
                            yaxis: {
                                title: {
                                    text: 'Nombre d\'impressions'
                                },
                                min: 0
                            },
                            plotOptions: {
                                bar: {
                                    borderRadius: 4,
                                    horizontal: false
                                }
                            },
                            dataLabels: {
                                enabled: true,
                                style: {
                                    fontSize: '12px',
                                    fontFamily: 'Helvetica, Arial, sans-serif',
                                    fontWeight: 'bold',
                                    colors: ['#ffffff']
                                }
                            },
                            colors: ['#118329']
                        });

                        chart.render();
                    });
            }

            yearSelect.addEventListener('change', function() {
                const selectedYear = yearSelect.value;
                fetchMonthData(selectedYear);
            });

            fetchMonthData(yearSelect.value); // Fetch data for the initial year
        });
    </script>
{% endblock %}
