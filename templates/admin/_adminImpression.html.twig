
<div class="card">
    <div class="card-body">
        <div class="row">
            <!-- Carte pour les impressions de l'année en cours -->
            <div class="col-md-6 mt-4">
                <a href="#!" class="features feature-success d-flex justify-content-between align-items-center rounded shadow p-3">
                    <div class="d-flex align-items-center">
                        <div class="icon text-center rounded-pill">
                            <i class="uil uil-file-alt fs-4 mb-0"></i>
                        </div>
                        <div class="flex-1 ms-3">
                            <h6 class="mb-0 text-muted">Impressions pour l'année {{ "now"|date("Y") }}</h6>
                            <p class="fs-5 text-dark fw-bold mb-0"><span class="counter-value" data-target="{{ totalImpressionsCurrentYear }}">{{ totalImpressionsCurrentYear }}</span></p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Carte pour le nombre total d'impressions -->
            <div class="col-md-6 mt-4">
                <a href="#!" class="features feature-success d-flex justify-content-between align-items-center rounded shadow p-3">
                    <div class="d-flex align-items-center">
                        <div class="icon text-center rounded-pill">
                            <i class="uil uil-file-alt fs-4 mb-0"></i>
                        </div>
                        <div class="flex-1 ms-3">
                            <h6 class="mb-0 text-muted">Impressions Totales</h6>
                            <p class="fs-5 text-dark fw-bold mb-0"><span class="counter-value" data-target="{{ totalImpressions }}">{{ totalImpressions }}</span></p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-title">
        Statistiques sur le Nombre d'Impressions par Mois
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="year-select">Sélectionner une année :</label>
            <select id="year-select" class="form-control">
                {% for year in years %}
                    <option value="{{ year }}" {% if year == "now"|date("Y") %}selected{% endif %}>{{ year }}</option>
                {% endfor %}
            </select>
        </div>
        <div id="impressions-by-month-chart" style="height: 350px;"></div>
    </div>
</div>


{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yearSelect = document.getElementById('year-select');
            const chartElement = document.getElementById('impressions-by-month-chart');
            let chart;

            function fetchMonthData(year) {
                fetch(`/admin/statistics/impressions/${year}`)
                    .then(response => response.json())
                    .then(data => {
                        const labels = data.map(item => new Date(year, item.month - 1).toLocaleString('default', { month: 'long' }));
                        const counts = data.map(item => item.count);

                        if (chart) {
                            chart.destroy();
                        }

                        chart = new ApexCharts(chartElement, {
                            chart: {
                                type: 'bar',
                                height: 350
                            },
                            series: [{
                                name: `Nombre d'impressions en ${year}`,
                                data: counts
                            }],
                            xaxis: {
                                categories: labels
                            },
                            yaxis: {
                                title: {
                                    text: 'Nombre d\'impressions'
                                },
                                min: 0
                            },
                            plotOptions: {
                                bar: {
                                    borderRadius: 4,
                                    horizontal: false
                                }
                            },
                            dataLabels: {
                                enabled: true,
                                style: {
                                    fontSize: '12px',
                                    fontFamily: 'Helvetica, Arial, sans-serif',
                                    fontWeight: 'bold',
                                    colors: ['#ffffff']
                                }
                            },
                            colors: ['#118329']
                        });

                        chart.render();
                    });
            }

            yearSelect.addEventListener('change', function() {
                const selectedYear = yearSelect.value;
                fetchMonthData(selectedYear);
            });

            fetchMonthData(yearSelect.value); // Fetch data for the initial year
        });
    </script>
{% endblock %}
